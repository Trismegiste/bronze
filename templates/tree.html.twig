{% extends "base.html.twig" %}

{% block main %}
    <button><i class="icon-doc-add"></i></button>
    <div id="tree" class="tree"></div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://unpkg.com/feather-icons"></script>
    <script src="https://unpkg.com/sortable-tree/dist/sortable-tree.js"></script>

    <script>
        const nodes = [
            {
                data: {title: 'Home', completed: false, root: true},
                nodes: [
                    {data: {title: 'Page 1'}, nodes: [], completed: false},
                    {
                        data: {title: 'Page 2', completed: false},
                        nodes: [{data: {title: 'Subpage', completed: true}, nodes: []}]
                    }
                ]
            }
        ];

        const tree = new SortableTree({
            nodes: nodes,
            element: document.querySelector('#tree'),
            renderLabel: (data) => {
                const state = data.completed ? 'checked' : ''
                return `<input type="checkbox" ${state}/><span>${data.title}</span><i class="icon-link"></i><a href="#"><i class="icon-feather"></i></a><i class="icon-cancel"></i>`;
            },
            onChange: ({ nodes, movedNode, srcParentNode, targetParentNode }) => {
                console.log('change', movedNode.data)
                let rootNode = tree.getNode(nodes[0].id)
                console.log(rootNode.data)
            },
            onClick: (event, node) => {
                console.log('edit and delete', node.data);
            },
        });
    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://unpkg.com/sortable-tree/dist/sortable-tree.css" rel="stylesheet" />
    <link href="/fontello/css/fontello.css" rel="stylesheet" />

    <style>
        .tree {
            --st-label-height: 3.75rem;
            --st-subnodes-padding-left: 3rem;
            --st-collapse-icon-width: 1.5rem;
            --st-collapse-icon-height: 3.75rem;
            --st-collapse-icon-size: 0.9rem;
            display: flex;
            flex-direction: column;
            margin: 1.5rem 0;
        }
        .tree__label {
            display: flex;
            padding: 4px;
            font-size: 1rem;
            font-weight: 480;
            cursor: move;
        }
        .tree__label:hover {
            z-index: 2;
            --color: var(--hover-color);
            --background: var(--hover-background);
        }
        .tree__label:after {
            content: '';
            position: absolute;
            z-index: 4;
            inset: -2px 2px;
            border-top: 4px solid transparent;
            border-bottom: 4px solid transparent;
            transition: border-color 0.2s;
            pointer-events: none;
        }
        .tree__label > span {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem;
            width: 100%;
            height: 100%;
            border: 2px solid;
            border-radius: 6px;
            color: var(--color);
            background-color: var(--background);
            transition: color 0.2s, background 0.2s;
        }
        .tree__node--drop-before > .tree__label:after {
            border-top-color: var(--accent-color);
        }
        .tree__node--drop-after > .tree__label:after {
            border-bottom-color: var(--accent-color);
        }
        .tree__node--drop-inside > .tree__label {
            z-index: 3;
            --color: var(--accent-color);
            --background: var(--accent-background);
        }
        .tree__node--dragging .tree__label > span {
            border-style: dashed;
            cursor: move !important;
        }

        .tree__label > input[type=checkbox]:checked + span {
            opacity: 33%;
        }

        :root {
            --color: hsl(217, 11%, 90%);
            /*    --background: hsl(217, 11%, 10%); */
            --accent-color: hsl(215, 100%, 58%);
            --accent-background: hsl(215, 71%, 12%);
            --hover-color: hsl(217, 11%, 86%);
            --hover-background: hsl(217, 11%, 15%);
            --muted-color: hsl(217, 11%, 46%);
        }

    </style>
{% endblock %}